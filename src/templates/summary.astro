---
interface Props {
  data: any;
  paperWidth: string;
  paperHeight: string;
}

const { data, paperWidth, paperHeight } = Astro.props;
---

<div style={`width:${paperWidth}px;height:${paperHeight}px`} class="flex font-sans text-[11px] leading-[1.4] bg-white">
  <div class="flex-1 flex flex-col">

    <!-- Header con borde lateral verde -->
    <div class="border-l-4 border-[#11D4B3] px-6 py-5 bg-white">
      <div class="flex items-center justify-between mb-4">
        <div class="text-[10px] font-bold text-[#1a7a5a] tracking-wide uppercase">CGIAR Result Summary</div>
        <div class="text-[8px] text-gray-400">Report generated from PRMS</div>
      </div>

      <h1 class="text-[#02211A] text-[20px] font-bold leading-tight">
        {data?.title ?? 'No title provided'}
      </h1>
    </div>

    <!-- Contenido principal -->
    <div class="flex-1 px-6 pt-4">

      <!-- Info grid 2 columnas -->
      <div class="grid grid-cols-2 gap-x-6 gap-y-3 mb-5">
        <div>
          <p class="text-[9px] text-gray-400 uppercase tracking-wide mb-0.5">Reporting Phase</p>
          <p class="text-gray-800 font-medium">Reporting 2025</p>
        </div>
        <div>
          <p class="text-[9px] text-gray-400 uppercase tracking-wide mb-0.5">Result Type</p>
          <p class="text-gray-800 font-medium">Policy Change</p>
        </div>
        <div>
          <p class="text-[9px] text-gray-400 uppercase tracking-wide mb-0.5">Submitter</p>
          <p class="text-gray-800 font-medium">SP 02 - Sustainable Farming</p>
        </div>
        <div>
          <p class="text-[9px] text-gray-400 uppercase tracking-wide mb-0.5">Lead Contact</p>
          <p class="text-gray-800 font-medium">Obilo Chinyere</p>
        </div>
      </div>

      <!-- Divider -->
      <div class="border-t border-gray-200 mb-4"></div>

      <!-- Short title -->
      <div class="mb-4">
        <p class="text-[9px] text-gray-400 uppercase tracking-wide mb-1">Short Title</p>
        <p class="text-gray-700">Planting Date Advisories disseminated in Africa.</p>
      </div>

      <!-- Description -->
      <div class="mb-5">
        <p class="text-[9px] text-gray-400 uppercase tracking-wide mb-1">Description</p>
        <p class="text-gray-600 text-[10px] leading-[1.5]">The content of the Planting Date Advisories was developed into messages and disseminated to farmers across Bihar through the dissemination platforms of BAU, JEEVIKA and IFFCO kisan. The advisories were approved and accepted by the Convergence Platform in the form of text and audio to be disseminated to farmers across the state.</p>
      </div>

      <!-- Divider -->
      <div class="border-t border-gray-200 mb-4"></div>

      <!-- Impact Areas como badges -->
      <div class="mb-4">
        <p class="text-[9px] text-gray-400 uppercase tracking-wide mb-2">Impact Areas Targeted</p>
        <div class="flex flex-wrap gap-2">
          <div class="inline-flex items-center gap-1.5 bg-[#11D4B3]/10 border border-[#11D4B3]/30 rounded-full px-3 py-1.5">
            <div class="w-2 h-2 rounded-full bg-[#11D4B3]"></div>
            <span class="text-[10px] font-medium text-[#02211A]">Nutrition, health & food security</span>
            <span class="text-[8px] text-[#1a7a5a] font-bold ml-1">Principal</span>
          </div>
          <div class="inline-flex items-center gap-1.5 bg-[#11D4B3]/10 border border-[#11D4B3]/30 rounded-full px-3 py-1.5">
            <div class="w-2 h-2 rounded-full bg-[#11D4B3]/50"></div>
            <span class="text-[10px] font-medium text-[#02211A]">Environment health & biodiversity</span>
            <span class="text-[8px] text-[#1a7a5a] font-bold ml-1">Significant</span>
          </div>
        </div>
      </div>

      <!-- QA status -->
      <div class="bg-[#02211A]/5 rounded-lg px-4 py-3 flex items-center gap-3">
        <div class="w-3 h-3 rounded-full bg-[#11D4B3] shrink-0"></div>
        <p class="text-[9px] text-gray-600"><span class="font-bold text-gray-800">Quality Assured</span> â€” Reviewed by two assessors and a senior third-party expert.</p>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="border-t border-gray-200 px-6 py-2 flex justify-between items-center text-[8px] text-gray-500">
      <p><span class="font-bold">PRMS Summary</span> | Page 1 of 1</p>
      <p class="font-bold text-[#1a7a5a]">CGIAR</p>
    </div>
  </div>
</div>
